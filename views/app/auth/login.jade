extends ../../template/layout
block content
    if success && success.length > 0
        .alert.alert-success.alert-dismissible.fade-in(role="alert")
            button.close(type="button" data-dismiss="alert" aria-label="Close")
                span(aria-hidden="true") Ã—
            p= success
    div(class="text-center")
        h2
          a(href="/") #{title}
    div(class="row")
        div(class="center-block col-md-5 form space-big-top reset-float")
         form(action="/login" method="POST" class="form-horizontal")
            span Log In
            div(class="form-group space-top")
                label(for"username" class="col-sm-3 control-label") Username
                div(class="col-sm-8")
                    input(type='text' name="username" class='form-control' placeholder='Username')
            div(class="form-group space-top")
                 label(for"password" class="col-sm-3 control-label") Password
                 div(class="col-sm-8")
                    input(type='password' name="password" class='form-control' placeholder='Password')
            div(class="form-group space-top")
                     input(type="submit" class="btn btn-success pull-left spacing-left" value="LogIn")
                     a(href="/auth/signup" class="pull-right") I do not have an account



